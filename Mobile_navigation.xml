<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.movemindsa.dashboard.fragments.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_explore"
        android:name="com.example.movemindsa.dashboard.fragments.ExploreFragment"
        android:label="@string/title_explore"
        tools:layout="@layout/fragment_explore" >
        <action
            android:id="@+id/action_navigation_explore_to_recommendedWorkoutsFragment"
            app:destination="@id/recommendedWorkoutsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_analytics"
        android:name="com.example.movemindsa.dashboard.fragments.AnalyticsFragment"
        android:label="@string/title_analytics"
        tools:layout="@layout/fragment_analytics" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.movemindsa.dashboard.fragments.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_navigation_profile_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/recommendedWorkoutsFragment"
        android:name="com.example.movemindsa.dashboard.fragments.RecommendedWorkoutsFragment"
        android:label="fragment_recommended_workouts"
        tools:layout="@layout/fragment_recommended_workouts" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.movemindsa.dashboard.fragments.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>
